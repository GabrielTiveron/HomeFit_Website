<h1>Treinos do <%= @clients.name %> <%= @dia %></h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Status</th>
      <th scope="col">Exercício</th>
      <th scope="col">Duração</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
  <% @client_routine.each do |routine| %>
    <tr>
      <td><%= routine.status %></td>
      <td><%= routine.exercise.desc_exercise %></td>
      <td><%= routine.duration %></td>
      <td> <a class="btn btn-outline-success" href="<%=trainer_edit_exercises_path(:id => @clients.id, day: @day, exercise_id: routine.exercise.id)%>" role="button">Editar</a></td>
      <td> <a class="btn btn-outline-danger" href='<%=trainer_delete_exercise_path(:routine_id => routine.id)%>' data-method='delete' role="button">Excluir</a></td>
    </tr>
    <% end %>
  </tbody>
</table>